<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="220sp"
            android:id="@+id/perfection_top_view">

        <TextView
                android:text="完善信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/perfection_text"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        <ImageView
                android:id="@+id/perfection_image"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/perfection_icon"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toTopOf="@+id/perfection_text"
                android:layout_marginBottom="4dp"/>
    </android.support.constraint.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/perfection_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/basicColor"
            android:src="@drawable/avatar_boy"
            android:layout_gravity="center_horizontal"/>
    <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="选择头像"
            android:textColor="@color/qmui_config_color_gray_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
        <ImageView
                android:id="@+id/image_boy"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/boy_unselect_icon"
                android:layout_marginRight="20sp"/>
        <ImageView
                android:id="@+id/image_girl"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:src="@drawable/girl_unselect_icon"/>
    </LinearLayout>
    <TextView
            android:text="性别"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:textColor="@color/qmui_config_color_gray_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:id="@+id/perfection_mid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="40sp">
        <android.support.design.widget.TextInputLayout
                android:id="@+id/perfection_username_edit"
                app:errorEnabled="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <EditText
                    android:hint="昵称"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/perfection_password_edit"
                app:errorEnabled="true"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
            <EditText
                    android:hint="密码"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
        </android.support.design.widget.TextInputLayout>



    </LinearLayout>
    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:id="@+id/perfection_button"
            android:text="完成"
            android:textSize="15sp"
            app:qmui_radius="10sp"
            android:layout_marginLeft="32sp"
            android:layout_marginRight="32sp"
            android:layout_marginTop="35sp"/>

</LinearLayout>