<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TradeBlock.TradeDetailActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:gravity="center"
            android:background="@color/basicColor"
            app:contentInsetStart="0dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
                android:id="@+id/block_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:text="宝贝详情"
                android:textColor="@color/qmui_config_color_white"
                android:textSize="20sp" />


    </android.support.v7.widget.Toolbar>

    <com.youth.banner.Banner
            android:id="@+id/trade_detail_banner"
            android:layout_width="match_parent"
            android:layout_height="240sp"/>

    <RelativeLayout
            android:id="@+id/trade_detail_post_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp">

        <TextView
                android:id="@+id/trade_detail_title"
                android:text="无标题"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="30sp"
                android:layout_marginBottom="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:id="@+id/trade_detail_info"
                android:layout_below="@id/trade_detail_title"
                android:layout_width="match_parent"
                android:layout_height="40sp">
            <TextView
                    android:id="@+id/trade_detail_price_prefix"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4sp"
                    android:textColor="@color/qmui_config_color_red"
                    android:text="￥"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/trade_detail_price"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4sp"
                    android:layout_toRightOf="@id/trade_detail_price_prefix"
                    android:layout_marginLeft="2sp"
                    android:textColor="@color/qmui_config_color_red"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/trade_detail_fineness"
                    android:text="99新"
                    android:textSize="20sp"
                    android:textColor="@color/qmui_config_color_gray_5"
                    android:layout_alignBottom="@id/trade_detail_price_prefix"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>


        <TextView
                android:id="@+id/trade_detail_content"
                android:text="详情"
                android:textSize="20sp"
                android:layout_below="@id/trade_detail_info"
                android:layout_marginTop="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



    </RelativeLayout>

    <View
            android:id="@+id/trade_detail_divider"
            android:layout_marginTop="20sp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/qmui_config_color_gray_9"/>
    <RelativeLayout
            android:id="@+id/trade_detail_post_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/trade_detail_avatar"
                android:src="@drawable/avatar_boy"
                android:layout_width="50sp"
                android:layout_marginRight="10sp"
                android:layout_height="50sp"
                android:layout_toLeftOf="@id/trade_detail_username"/>

        <TextView
                android:id="@+id/trade_detail_username"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12sp"
                android:text="用户名"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/trade_detail_contact_prefix"
                android:text="联系方式："
                android:textSize="15sp"
                android:layout_marginTop="6sp"
                android:layout_toLeftOf="@id/trade_detail_contact"
                android:layout_below="@id/trade_detail_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/trade_detail_contact"
                android:layout_below="@id/trade_detail_avatar"
                android:layout_alignTop="@id/trade_detail_contact_prefix"
                android:text="782870819@qq.com"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/trade_detail_post_time"
                android:text="2019-8-21"
                android:textSize="15sp"
                android:textColor="@color/qmui_config_color_gray_5"
                android:layout_below="@id/trade_detail_contact_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3sp"/>
    </RelativeLayout>
</LinearLayout>